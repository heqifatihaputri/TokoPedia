
<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id, readonly: true, input_html: { value: current_user.id } %>
    <%= f.input :cart_id, readonly: true, input_html: { value: @cart.id } %>
    <%= f.input :email, readonly: true, input_html: { value: current_user.email } %>
    <%= f.input :total_price, readonly: true, input_html: { value: @cart.total_price } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
