<div class="keep-shooping pv1 mt4 has-text-right">
  <%= link_to 'Keep Shooping', products_path, class: 'button is-warning' %>
</div>

<section class="section">
  <%= render(@cart.line_items) %>

  <div class="columns">
    <div class="column">
      <%= button_to "Checkout", new_order_path, method: :get, class: "button is-danger" %>
    </div>
    <div class="column">
      <%= link_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %>
    </div>
    <div class="column total has-text-right">
      <h4 class="title is-4">
        <span class="f5 has-text-right">Total:</span><%= number_to_currency(@cart.total_price) %>
      </h4>
    </div>
  </div>
</section>